                    <div class="form-group">
                        {{ form_label(form.plainPassword.second) }}
                        {{ form_widget(form.plainPassword.second, {'attr':{ 'class':'form-control' }}) }}
                    </div>
                    <p class="text-right">
                        <input class="btn btn-primary" type="submit" value="{{ 'resetting.reset.submit'|trans }}" />
                    </p>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

